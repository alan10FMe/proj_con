<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/board"
    android:orientation="horizontal"
    android:weightSum="5"
    tools:context="com.nojsoft.conquian.BoardActivity">

    <LinearLayout
        android:id="@+id/linear_player_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#182931"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/hand_player_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#11aaa1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView style="@style/ComputerTwoHand" />

            <ImageView style="@style/ComputerTwoHand" />

            <ImageView style="@style/ComputerTwoHand" />

            <ImageView style="@style/ComputerTwoHand" />

            <ImageView style="@style/ComputerTwoHand" />

            <ImageView style="@style/ComputerTwoHand" />

            <ImageView style="@style/ComputerTwoHand" />

            <ImageView style="@style/ComputerTwoHand" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_player_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#661111"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView style="@style/ComputerTwoGame" />

            <ImageView style="@style/ComputerTwoGame" />

            <ImageView style="@style/ComputerTwoGame" />

            <ImageView style="@style/ComputerTwoGame" />

            <ImageView style="@style/ComputerTwoGame" />

            <ImageView style="@style/ComputerTwoGame" />

            <ImageView style="@style/ComputerTwoGame" />

            <ImageView style="@style/ComputerTwoGame" />

            <ImageView style="@style/ComputerTwoGame" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#18121a"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/linear_deck"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#18a121"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/btn_deck"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_card_playing"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:background="@drawable/background" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_player_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#a2a221"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/game_player_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#111221"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView style="@style/PlayerGame" />

                <ImageView style="@style/PlayerGame" />

                <ImageView style="@style/PlayerGame" />

                <ImageView style="@style/PlayerGame" />

                <ImageView style="@style/PlayerGame" />

                <ImageView style="@style/PlayerGame" />

                <ImageView style="@style/PlayerGame" />

                <ImageView style="@style/PlayerGame" />

                <ImageView style="@style/PlayerGame" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/hand_player_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#991121"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView style="@style/PlayerHand" />

                <ImageView style="@style/PlayerHand" />

                <ImageView style="@style/PlayerHand" />

                <ImageView style="@style/PlayerHand" />

                <ImageView style="@style/PlayerHand" />

                <ImageView style="@style/PlayerHand" />

                <ImageView style="@style/PlayerHand" />

                <ImageView style="@style/PlayerHand" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_player_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#18aaa1"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/game_player_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#11aaa1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView style="@style/ComputerOneGame" />

            <ImageView style="@style/ComputerOneGame" />

            <ImageView style="@style/ComputerOneGame" />

            <ImageView style="@style/ComputerOneGame" />

            <ImageView style="@style/ComputerOneGame" />

            <ImageView style="@style/ComputerOneGame" />

            <ImageView style="@style/ComputerOneGame" />

            <ImageView style="@style/ComputerOneGame" />

            <ImageView style="@style/ComputerOneGame" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hand_player_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#661111"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView style="@style/ComputerOneHand" />

            <ImageView style="@style/ComputerOneHand" />

            <ImageView style="@style/ComputerOneHand" />

            <ImageView style="@style/ComputerOneHand" />

            <ImageView style="@style/ComputerOneHand" />

            <ImageView style="@style/ComputerOneHand" />

            <ImageView style="@style/ComputerOneHand" />

            <ImageView style="@style/ComputerOneHand" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
