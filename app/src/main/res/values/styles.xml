<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CardHand">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="CardBoard">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="PlayerHand" parent="CardHand">
        <item name="android:rotation">0</item>
    </style>


    <style name="PlayerBoard" parent="CardBoard">
        <item name="android:rotation">0</item>
    </style>

    <style name="ComputerTwoHand" parent="CardHand">
        <item name="android:rotation">90</item>
    </style>


    <style name="ComputerTwoBoard" parent="CardBoard">
        <item name="android:rotation">90</item>
    </style>

    <style name="ComputerOneHand" parent="CardHand">
        <item name="android:rotation">270</item>
    </style>


    <style name="ComputerOneBoard" parent="CardBoard">
        <item name="android:rotation">270</item>
    </style>


</resources>
