<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PlayerHand">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="PlayerGame">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:tag">@string/background_tag</item>
    </style>

    <style name="ComputerTwoHand" parent="PlayerHand">
        <item name="android:rotation">90</item>
    </style>


    <style name="ComputerTwoGame" parent="PlayerGame">
        <item name="android:rotation">90</item>
    </style>

    <style name="ComputerOneHand" parent="PlayerHand">
        <item name="android:rotation">270</item>
    </style>


    <style name="ComputerOneGame" parent="PlayerGame">
        <item name="android:rotation">270</item>
    </style>


</resources>
